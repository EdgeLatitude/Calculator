<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:localizedstrings="clr-namespace:Calculator.Shared.Localization;assembly=Calculator.Shared"
             xmlns:viewmodels="clr-namespace:Calculator.Shared.ViewModels;assembly=Calculator.Shared"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             mc:Ignorable="d"
             ios:Page.UseSafeArea="True"
             x:DataType="viewmodels:CalculatorViewModel"
             x:Class="Calculator.Mobile.Pages.CalculatorPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem 
            Text="{x:Static localizedstrings:LocalizedStrings.History}"
            Command="{Binding ShowHistoryCommand}"
            Order="Primary" />
        <ToolbarItem 
            Text="{x:Static localizedstrings:LocalizedStrings.Settings}"
            Command="{Binding NavigateToSettingsCommand}"
            Order="Secondary" />
        <ToolbarItem 
            Text="{x:Static localizedstrings:LocalizedStrings.About}"
            Command="{Binding AboutCommand}"
            Order="Secondary" />
    </ContentPage.ToolbarItems>
    <StackLayout
        Spacing="0">
        <StackLayout
            Style="{StaticResource InputParentStackLayoutStyle}">
            <BoxView
                Style="{StaticResource InputSeparatorStyle}" />
            <Frame
                Style="{StaticResource InputFrameStyle}">
                <Grid>
                    <!-- Spacer label because in iOS labels' height is collapsed when there is no text -->
                    <Label 
                        Text=" "
                        Style="{StaticResource InputLabelStyle}">
                        <Label.IsVisible>
                            <OnPlatform x:TypeArguments="x:Boolean">
                                <On Platform="Android" Value="False" />
                                <On Platform="iOS" Value="True" />
                            </OnPlatform>
                        </Label.IsVisible>
                    </Label>
                    <ScrollView
                        x:Name="InputScrollView"
                        Style="{StaticResource InputScrollViewStyle}">
                        <Label 
                            x:Name="InputLabel"
                            Text="{Binding Input}" 
                            Style="{StaticResource InputLabelStyle}"
                            PropertyChanged="InputLabel_PropertyChanged" />
                    </ScrollView>
                </Grid>
            </Frame>
            <BoxView
                Style="{StaticResource InputSeparatorStyle}" />
        </StackLayout>
        <Grid 
            Margin="5" 
            RowSpacing="5" 
            ColumnSpacing="5"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button 
                Text="AC" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding AC_Command}" />
            <Button 
                Text="⌫" 
                Grid.Column="1" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding DeleteCommand}" />
            <Button 
                Text="^" 
                Grid.Column="2"
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding BinaryOperatorCommand}"
                CommandParameter="^" />
            <Button 
                Text="√" 
                Grid.Column="3" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding UnaryOperatorCommand}"
                CommandParameter="√" />
            <Button 
                Text="(" 
                Grid.Row="1" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding ParenthesesCommand}"
                CommandParameter="(" />
            <Button 
                Text=")" 
                Grid.Row="1" 
                Grid.Column="1" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding ParenthesesCommand}"
                CommandParameter=")" />
            <Button 
                Text="{x:Static localizedstrings:LocalizedStrings.LastResultAbbreviation}" 
                Grid.Row="1" 
                Grid.Column="2" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding LastResultCommand}" />
            <Button 
                Text="÷" 
                Grid.Row="1" 
                Grid.Column="3" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding BinaryOperatorCommand}"
                CommandParameter="÷" />
            <Button 
                Text="7" 
                Grid.Row="2" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding NumberCommand}"
                CommandParameter="7" />
            <Button 
                Text="8" 
                Grid.Row="2" 
                Grid.Column="1" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding NumberCommand}"
                CommandParameter="8" />
            <Button 
                Text="9" 
                Grid.Row="2" 
                Grid.Column="2" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding NumberCommand}"
                CommandParameter="9" />
            <Button 
                Text="×" 
                Grid.Row="2" 
                Grid.Column="3" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding BinaryOperatorCommand}"
                CommandParameter="×" />
            <Button 
                Text="4" 
                Grid.Row="3" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding NumberCommand}"
                CommandParameter="4" />
            <Button 
                Text="5" 
                Grid.Row="3" 
                Grid.Column="1" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding NumberCommand}"
                CommandParameter="5" />
            <Button 
                Text="6" 
                Grid.Row="3" 
                Grid.Column="2" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding NumberCommand}"
                CommandParameter="6" />
            <Button 
                Text="-" 
                Grid.Row="3" 
                Grid.Column="3" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding BinaryOperatorCommand}"
                CommandParameter="-" />
            <Button 
                Text="1" 
                Grid.Row="4" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding NumberCommand}"
                CommandParameter="1" />
            <Button 
                Text="2" 
                Grid.Row="4" 
                Grid.Column="1" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding NumberCommand}"
                CommandParameter="2" />
            <Button 
                Text="3" 
                Grid.Row="4" 
                Grid.Column="2" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding NumberCommand}"
                CommandParameter="3" />
            <Button 
                Text="+" 
                Grid.Row="4" 
                Grid.Column="3" 
                Grid.RowSpan="2" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding BinaryOperatorCommand}"
                CommandParameter="+" />
            <Button 
                Text="0" 
                Grid.Row="5" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding NumberCommand}"
                CommandParameter="0" />
            <Button
                Text="{Binding DecimalSeparator}"
                Grid.Row="5" 
                Grid.Column="1" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding DecimalCommand}" />
            <Button 
                Text="=" 
                Grid.Row="5" 
                Grid.Column="2" 
                Style="{StaticResource InputButtonStyle}"
                Command="{Binding CalculateCommand}" />
        </Grid>
    </StackLayout>
</ContentPage>