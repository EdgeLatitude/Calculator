<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="LaunchTheme" parent="MainTheme">
    <item name="android:windowBackground">@color/launcher_background</item>
  </style>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>

  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#006060</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#004040</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#008080</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>

    <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
  </style>

  <style name="MainTheme.Light" parent="MainTheme.Base.Light">
  </style>

  <style name="MainTheme.Base.Light" parent="Theme.AppCompat.Light">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">#006060</item>
    <item name="colorPrimaryDark">#004040</item>
    <item name="colorAccent">#008080</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
  </style>

  <style name="MainTheme.Splash" parent ="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowActionBar">true</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#008080</item>
  </style>
  
</resources>